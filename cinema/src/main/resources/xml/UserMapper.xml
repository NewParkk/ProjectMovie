<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.cinema.mapper.UserMapper">
	<!-- 사용자 이름으로 사용자 조회 -->
	<select id="getUserByUsername" parameterType="string" resultType="com.spring.cinema.model.User">
		SELECT * FROM user WHERE username = #{username}
	</select>
	
		<insert id="insertUser"
		parameterType="com.spring.cinema.model.User">
		INSERT INTO user (username, password, name, email
		)
		VALUES (#{username}, #{password}, #{name},
		#{email}
		)
	</insert>
	</mapper>